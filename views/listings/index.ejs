<% layout('/layouts/boilerplate') %>

    <body>
        <%= success %>
        <h3>All Listings!</h3>
        <div class="row main-box">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>" class="anchor">
                    <div class="card card-style" style="width: 18rem;">
                        <img src="<%= listing.image.url %>" class="card-img-top img-style" alt="cardImg" style="height: 20rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b> <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                            </p>
                        </div>
                    </div>
                </a>

                <% } %>
        </div>

    </body>