<% layout("layouts/boilerplate") %>

    <body>
        <div class="row center">
            <div class="col-8 offset-2">
                <div class="mb-3 mt-3">
                    <h2>
                        <%= listing.title %>
                    </h2>
                </div>
                <div class="card">
                    <img src="<%= listing.image.url %>" class="card-img-top show-img mb-2" alt="listing image">
                    <div class="card-body show-body">

                        <p class="card-text show-text mt-3">
                            <%= listing.description %><br>
                                <b>&#8377; <%= listing.price.toLocaleString("en-IN") %> </b>/ night <br>
                                <%= listing.location %> <br>
                                    <%= listing.country %> <br>
                        </p>
                        <a href="http://localhost:8080/listings/<%= listing._id %>/edit"
                            class="btn btn-dark add-btn edit-btn">Edit</a>
                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post"
                            style="display: inline-block;">
                            <button class="btn btn-dark del-btn">Delete Listing</button>
                        </form>
                    </div>
                </div>

                <div class="col-9 mb-3">
                    <hr>
                    <h4>Leave a review</h4>
                    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate
                        class="needs-validation">
                        <div class="mb-3 mt-3">
                            <label for="rating" class="form-label">Rating: </label>
                            <input type="range" id="rating" name="review[rating]" class="form-range" min="1" max="5">
                        </div>

                        <div class="mb-3 mt-3">
                            <label for="comment" class="form-label">Comment:</label>
                            <textarea name="review[comment]" id="comment" cols="40" rows="4" class="form-control"
                                required></textarea>
                            <div class="invalid-feedback">Please add some comment before submitting.</div>
                        </div>

                        <button type="submit" class="btn btn-outline-dark">Submit</button>
                    </form>

                    <hr>
                    <h4 class="mb-3">All Reviews</h4>
                    <div class="row">
                        <% for(review of listing.review) {%>
                            <div class="col-5 ms-2">
                                <div class="card-body review-style">
                                    <h5 class="card-title">Anonymous</h5>
                                    <p class="card-text">
                                        <%= review.comment %>
                                    </p>
                                    <p class="card-text">
                                        <%= review.rating %> star
                                    </p>

                                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-dark">Delete</button>
                                    </form>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>

            </div>
        </div>

    </body>